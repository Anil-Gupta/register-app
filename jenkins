pipeline {
    agent { label 'jenkins-slave' }
    tools {
        jdk 'java17'
        maven 'Maven3'
    }
    stages
    {
        stage("Checkout from SCM") {
            steps {
                git branch: 'main', credentialsId: 'github', url: 'https://github.com/Anil-Gupta/register-app'
            }
        }
        stage("Build Application") {
            steps {
                sh "mvn clean package"
            }
        }
        stage("Test Application") {
            steps {
                sh "mvn test"
            }
        }
    }
}
